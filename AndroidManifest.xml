<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tn.arts.userguide"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="1"
        android:targetSdkVersion="15" />
<uses-permission android:name="android.permission.INTERNET" />
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.tmm.android.chuck.ChuckApplication" >
        <activity
            android:name=".subscribe"
            android:label="@string/title_activity_dash_board" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tmm.android.chuck.QuestionActivity" android:configChanges="keyboardHidden|orientation"/>
		<activity android:name="com.tmm.android.chuck.RulesActivity" android:configChanges="keyboardHidden|orientation"/>
		<activity android:name="com.tmm.android.chuck.EndgameActivity" android:configChanges="keyboardHidden|orientation"/>
		<activity android:name="com.tmm.android.chuck.SettingsActivity" android:configChanges="keyboardHidden|orientation"/>
		<activity android:name="com.tmm.android.chuck.AnswersActivity" android:configChanges="keyboardHidden|orientation"/>
		<activity android:name="com.tmm.android.chuck.SplashActivity" android:configChanges="keyboardHidden|orientation"/>
		<activity android:name="com.tmm.android.chuck.TestPost" android:configChanges="keyboardHidden|orientation"/>
		<activity android:name="com.tmm.android.chuck.TestConnect" android:configChanges="keyboardHidden|orientation"/>
        
    </application>
<application android:name=".ChuckApplication"></application>
</manifest>